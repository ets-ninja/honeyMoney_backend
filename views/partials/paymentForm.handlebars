<form id='form' action="/basket/create-payment-intent" >
  <p class='amount'>Top up amount</p>
  <div class='money_input'>
    <input
      type='text'
      min='0.50'
      onkeyup='changeValue(event)'
      placeholder='How much you want to pay?'
      id='amount'
    />
    <label for="amount" class="error"></label>
    <div class='money_buttons'>
      <button  type="button" onclick='setDonateAmount(50)'>+50$</button>
      <button type="button" onclick='setDonateAmount(100)'>+100$</button>
      <button type="button" onclick='setDonateAmount(150)'>+150$</button>
    </div>
    <input type='text' placeholder='First name' id='userName' />
    <label for="userName" class="error"></label>
  </div>
  <textarea
  class="comment"
    placeholder='Comment'
    name=''
    id='comment'
    cols='30'
    rows='10'
  ></textarea>
  <div class='buttons'>
    <button type="submit" name="submit">Donate</button>
    <div>
      <a href='http://localhost:3000/login?basketId={{{basketId}}}'>SingIn</a>
      <a href='#'>SingUp</a>
    </div>
  </div>
</form>